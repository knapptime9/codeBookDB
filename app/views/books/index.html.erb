<!-- template created after running rails generate controller books.  contains code that will render to localhost/books/index -->

<!-- IMPORTANT:
  ERB syntax(data passed between controller,etc displayed enclosed by):
    <%= ... %>  code will output and display on page
    <% ... %>   silently run in bacground, does not display -->
    <h1>All books:</h1>

    <%= link_to "Add a New Code Book", new_book_path %>

    <table>
     <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Link</th>
     </tr>

     <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description%></td>
      <td><%= book.link %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: "Confirm Delete [y/n]?" }%></td>
     </tr>
     <%end%>
    </table>

    <%= link_to "Log out", '/logout' %>
